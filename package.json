{
  "name": "profile-service",
  "version": "1.0.0",
  "description": "Profile Service for Membership Management System",
  "main": "bin/profile-service.js",
  "scripts": {
    "start": "node bin/profile-service.js",
    "dev": "nodemon bin/profile-service.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo \"No linting configured yet\" && exit 0",
    "build": "echo \"No build step required\" && exit 0",
    "postinstall": "echo \"Dependencies installed successfully\"",
    "docker:build": "docker build -t profile-service .",
    "docker:run": "docker run -p 4001:4001 profile-service",
    "test:ci": "npm test && npm run lint"
  },
  "keywords": [
    "profile",
    "membership",
    "api",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@membership/policy-middleware": "file:../policy-middleware",
    "@projectShell/rabbitmq-middleware": "github:kashif147/rabbitmq-middleware",
    "amqplib": "^0.10.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "fast-json-patch": "^3.1.1",
    "http-errors": "^2.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "debug": "^4.3.4",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/bin/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(uuid)/)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
